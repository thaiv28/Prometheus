  {% block head_extra %}{% endblock %}
</head>
<body>
  <header class="site-header">
  <a class="logo" href="{{ _root }}index.html" aria-label="Go to home">Prometheus</a>
    <nav class="metric-switch" id="metric-switch">
      {% block metric_switch %}{% endblock %}
    </nav>
    <div class="header-actions">
      <input id="team-search" type="search" placeholder="Search team..." />
    </div>
  </header>
  <div class="filters-bar" id="filters-bar">
    {% block filters %}{% endblock %}
  </div>
